<div class="col-md4 mx-auto" style="width: 290px;">
    <div class="card">
        <div class="card-header">
            <h3>
                Edit user
                <a href="/notes"><button class="btn btn-outline-danger" id="btn-close-edit">&times;</button></a>
            </h3>
        </div>
        <div class="card-body">
            <form action="/users/edit/{{user._id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" value="{{user.name}}">
                </div>
                <div class="form-group">
                    <textarea type="text" name="email" class="form-control">{{user.email}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>