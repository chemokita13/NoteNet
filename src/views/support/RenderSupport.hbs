
    <div class="col-md-4 mx-auto">
    <div class="card tex-center">
        <div class="card-header">
            <h3>
                Send e-mail
                <a href="/"><button class="btn btn-outline-danger" id="btn-closeE">&times;</button></a>
            </h3>
        </div>
        <div class="card-body">
            <form action="/support/send-email" method="post">
                <div class="form-group">
                    <input type="text" name="email" class="form-control" placeholder="E-mail to be reply" value="{{email}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Name" value="{{name}}" autofocus>
                </div>
                <div class="form-group">
                    <textarea type="text" name="message" class="form-control" placeholder="Tell your problem"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Send
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>