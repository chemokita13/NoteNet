<div class="col-md4 mx-auto" style="width: 290px;">
    <div class="card">
        <div class="card-header">
            <h3>
                Edit note
                <a href="/notes"><button class="btn btn-outline-danger" id="btn-close-edit">&times;</button></a>
            </h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="Title" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea type="text" name="Description" class="form-control">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <input autocomplete="off" class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Destinatary" name="dest" value="{{note.dest}}">
                    <datalist id="datalistOptions">
                        {{#each names}}
                        <option>{{this}}</option>
                        {{/each}}
                    </datalist>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>